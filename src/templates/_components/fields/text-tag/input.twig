{% import "_includes/forms" as forms %}

{%- set class = [
  'nicetext',
  'flex-1',
  field.code ? 'code',
  field.uiMode == 'enlarged' ? 'readable',
]|filter %}

{% set config = {
  id: name|id,
  name: name,
  value: value.text,
  class: class,
  maxlength: field.charLimit,
  showCharsLeft: true,
  placeholder: field.placeholder ? field.placeholder|t('site'),
  rows: field.initialRows
} %}

{% namespace name %}
  <div class="flex flex-nowrap items-start">
    {{ forms.select({
      id: 'tag',
      name: 'tag',
      options: field.getAvailableTagOptions(),
      size: null,
      class: 'flex-1',
      value: value.tag
    }) }}

    {% if field.multiline %}
      {{ forms.textarea(config) }}
    {% else %}
      {{ forms.text(config) }}
    {% endif %}
  </div>
{% endnamespace %}
